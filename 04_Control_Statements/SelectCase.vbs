Dim day
day = 3

Select Case day
    Case 1
        MsgBox "Monday"
    Case 2
        MsgBox "Tuesday"
    Case 3
        MsgBox "Wednesday"
    Case 4
        MsgBox "Thursday"
    Case 5
        MsgBox "Friday"
    Case 6
        MsgBox "Saturday"
    Case 7
        MsgBox "Sunday"
    Case Else
        MsgBox "Invalid day"
End Select
